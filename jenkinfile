pipeline {
    agent any

    tools {
        maven 'Maven_3_6_3'  // Replace with your Maven version name configured in Jenkins
        jdk 'jdk17'  // Replace with your JDK name or version configured in Jenkins
    }

    stages {
        stage('Checkout from GitHub') {
            steps {
                // Checkout from the provided Git repository and branch
                git(
                    url: 'https://github.com/ashutosh0810/nagpDevopsRepo.git',
                    branch: 'master',

                )
            }
        }

        stage('Build & Test') {
            steps {
                script {
                    // Maven build and test
                    sh 'mvn clean verify'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    // SonarQube scan
                    withSonarQubeEnv('test_sonar') {
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }
    }

    post {
        always {
            // Always archive the artifacts and TestNG results
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true

        }
    }
}
